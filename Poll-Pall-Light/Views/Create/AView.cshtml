@model AItemViewModel

@{ TempData["idQ"] = ViewData["Qid"];}
@{ TempData["idP"] = ViewData["idCurrent"];}
@{ TempData["p"] = ViewData["pId"];}

<div class="bg-dark text-center text-light d-flex flex-sm-column justify-content-sm-around position-sticky" style="font-family: 'Montserrat', sans-serif; height: 8rem; margin: 0 5rem 2rem 5rem; border-radius: 0.3rem; align-items: center">
	<h1>A Items van</h1>
	<h2>@Model.Title</h2>
</div>

<div style="font-family: 'Montserrat', sans-serif; padding: 0 5rem 0 5rem!important; margin: 0!important;" class="maincontainer position-relative d-flex flex-sm-row justify-content-sm-between align-items-baseline">
	<div>
		<table class="table table-borderless" style="width: 60rem; margin-right: 0!important;">
			<tr>
				<th>
				</th>
			</tr>
			@foreach (var a in Model.AItems){
				<tr>
					<td>
						<div class="card mb-3 bg-dark text-light">
							<div class="card-header">
								<h5 style="color: #79a4d7">Q ITEM: @Model.Title</h5>
							</div>
							<div class="card-body">
								<h3 class="font-weight-bolder" style="color: #d4d269">@a.Title</h3>
							</div>
							<div class="card-footer">
								<form class="form" asp-controller="Delete" asp-action="DeleteAItem" method="post">
									<button asp-route-id="@a.ID" asp-controller="Delete" asp-action="DeleteAItem" type="submit" class="btn btn-danger font-weight-bold border-0" style="width: 7rem; height: 3rem; background: #d96363; color: #393939" onclick="return confirm('Are you sure you want to delete A item: @a.Title')">Delete</button>
								</form>
							</div>
						</div>
					</td>
				</tr>
			}
		</table>
	</div>
	<div class="card bg-dark position-sticky" style="z-index:50; top: 10%; left: 5%; width: 30rem; height: 40rem; margin-top: 2.2rem; margin-bottom: 2.7rem; align-self: start!important;">
		<div class="card-header">
			<h3 class="text-center" style="color: #BCE26BFF">Create a new A</h3>
		</div>
		<div class="card-body text-light">
			<form asp-controller="Create" asp-action="CreateAItem" method="post" class="form-group">
				<div>
					<label asp-for="AItem.Title">Give your A a title.</label>
					<input class="form-control bg-dark text-light" asp-for="AItem.Title"/>
				</div>
				<div>
					<label class="mt-3" asp-for="QId">Give your A a Q to match.</label>
					<select class="form-control bg-dark text-light" asp-for="QId">
						<option value="0">Please choose a Q</option>
						@{
							foreach (var x in Model.QConnectedByPollId){
								<option value="@x.ID">@x.Title</option>
							}
						}
					</select>
					<label class="mt-3" asp-for="rightAnswer">Optional: Make your A right / wrong.</label>
					<select class="form-control bg-dark text-light" asp-for="rightAnswer">
						<option value="false">False / Wrong</option>
						<option value="true">True / Right</option>
						<option value="false">Default / No Value</option>
					</select>			
				</div>				
				<input type="submit" class="form-control mt-3 btn font-weight-bold border-0 GreenHoverTextButton" style="background: #5A6268; color: #bfbfbf" value="Create A">
			</form>
			<div class="d-flex flex-sm-column justify-content-sm-around align-items-sm-center" style="height: 3rem">
				<a asp-route-id="@Model.PollId" asp-controller="Create" asp-action="QView" class="btn btn-primary font-weight-bold border-0 text-center" style="width: 15rem; height: 2rem; background: #5A6268; color: #bfbfbf; z-index:51">Back To Q's</a>
			</div>	
		</div>
	</div>
</div>
